<body class="container-auth">

  <%= error_helper %>

  <div class="climbr-title">
    <h1>climbr</h1>
  </div>

  <div class="jumbotron col-xs-offset-4 col-xs-4">
    <h2>Sign In</h2>
    <form class="form-group" action="<%= session_url %>" method="post">
      <%= auth_token %>

      <div class="form-group">
        <label>Email
          <input type="text" class="form-control" name="user[email]">
        </label>
      </div>

      <div class="form-group">
        <label>Password
          <input type="password" class="form-control" name="user[password]">
        </label>
      </div>

      <button type="submit" class="btn btn-primary">Sign In</button>

    </form>
    <%= link_to "Sign Up", new_user_url %>
  </div>
</body>
